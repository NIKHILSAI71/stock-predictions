# Example environment variables
# Copy this file to .env and fill in your values

# ============================================================================
# REQUIRED API KEYS
# ============================================================================

# Gemini AI API Key (Required for AI analysis and news reasoning)
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Serper API Key (Required for web search in news aggregation)
# Get your key from: https://serper.dev/
SERPER_API_KEY=your_serper_api_key_here

# ============================================================================
# OPTIONAL API KEYS - Social Media Sentiment Sources
# ============================================================================

# Twitter/X API (Optional - for Twitter sentiment analysis)
# Get your keys from: https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Reddit API (Optional - for Reddit sentiment analysis)
# Get your credentials from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# StockTwits API Token (Optional - public API works without token)
# Get your token from: https://api.stocktwits.com/developers/docs
STOCKTWITS_API_TOKEN=your_stocktwits_token_here  # Optional: for legacy API
STOCKTWITS_API_USERNAME=  # Optional: for gateway API (api-gw-prd.stocktwits.com)
STOCKTWITS_API_PASSWORD=  # Optional: for gateway API Basic Auth

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================

# Gemini Model Version (default: gemini-2.0-flash)
# Options: gemini-2.0-flash, gemini-2.0-flash-thinking-exp, gemini-1.5-pro
GEMINI_MODEL=gemini-2.0-flash

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Server host (default: 0.0.0.0)
HOST=0.0.0.0

# Server port (default: 8000)
PORT=8000

# Environment: development, staging, or production
# - development: Full error details, docs enabled, relaxed CORS
# - production: Hidden errors, docs disabled, strict CORS
ENVIRONMENT=development

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================

# API Keys for client authentication (REQUIRED FOR PRODUCTION)
# Comma-separated list of valid API keys that clients must provide in X-API-Key header
# Leave empty in development to auto-generate a key (will be printed on startup)
# Generate secure keys with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEYS=

# Allowed CORS origins (comma-separated list of URLs)
# CRITICAL: In production, set this to your actual frontend domain(s)
# Example: https://yourdomain.com,https://app.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:5173

# Rate limiting: Maximum requests per IP per minute
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (will be created if doesn't exist)
LOG_FILE_PATH=logs/api.log

# ============================================================================
# REDIS (OPTIONAL - For distributed rate limiting across multiple servers)
# ============================================================================

# Enable Redis for distributed rate limiting (default: false)
# Set to true if running multiple API instances behind a load balancer
REDIS_ENABLED=false

# Redis host and port
REDIS_HOST=localhost
REDIS_PORT=6379

